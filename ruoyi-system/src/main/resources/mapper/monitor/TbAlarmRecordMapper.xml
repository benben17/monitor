<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.monitor.mapper.TbAlarmRecordMapper">
    
    <resultMap type="TbAlarmRecord" id="TbAlarmRecordResult">
        <result property="id"    column="id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="indexName"    column="index_name"    />
        <result property="alarmContent"    column="alarm_content"    />
        <result property="alarmLevel"    column="alarm_level"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTbAlarmRecordVo">
        select id, device_id, index_name, alarm_content, alarm_level, create_by, create_time, update_by, update_time, remark from tb_alarm_record
    </sql>

    <select id="selectTbAlarmRecordList" parameterType="TbAlarmRecord" resultMap="TbAlarmRecordResult">
        <include refid="selectTbAlarmRecordVo"/>
        <where>  
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="indexName != null  and indexName != ''"> and index_name like concat('%', #{indexName}, '%')</if>
            <if test="alarmContent != null  and alarmContent != ''"> and alarm_content = #{alarmContent}</if>
            <if test="alarmLevel != null  and alarmLevel != ''"> and alarm_level = #{alarmLevel}</if>
        </where>
    </select>
    
    <select id="selectTbAlarmRecordById" parameterType="Long" resultMap="TbAlarmRecordResult">
        <include refid="selectTbAlarmRecordVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTbAlarmRecord" parameterType="TbAlarmRecord" useGeneratedKeys="true" keyProperty="id">
        insert into tb_alarm_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="indexName != null">index_name,</if>
            <if test="alarmContent != null">alarm_content,</if>
            <if test="alarmLevel != null">alarm_level,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="indexName != null">#{indexName},</if>
            <if test="alarmContent != null">#{alarmContent},</if>
            <if test="alarmLevel != null">#{alarmLevel},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTbAlarmRecord" parameterType="TbAlarmRecord">
        update tb_alarm_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="indexName != null">index_name = #{indexName},</if>
            <if test="alarmContent != null">alarm_content = #{alarmContent},</if>
            <if test="alarmLevel != null">alarm_level = #{alarmLevel},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbAlarmRecordById" parameterType="Long">
        delete from tb_alarm_record where id = #{id}
    </delete>

    <delete id="deleteTbAlarmRecordByIds" parameterType="String">
        delete from tb_alarm_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>